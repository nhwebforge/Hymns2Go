generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// Admin user model
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Main hymn model
model Hymn {
  id          String   @id @default(cuid())
  title       String
  latinTitle  String?  // Latin title (for translated hymns)
  author      String?
  translator  String?  // Translator name (especially for translated hymns)
  year        Int?

  // Raw uploaded text (with punctuation preserved)
  rawText     String   @db.Text

  // Processed structure (stored as JSON)
  structure   Json     // {verses: [{type: 'verse', lines: [...]}], chorus: {...}}

  // Text metadata
  firstLine      String?
  meter          String?  // e.g., "10 10 10 10", "8 7 8 7 D", "LM", "SM"
  language       String?  @default("English")
  copyright      String?  @db.Text  // Copyright text
  ccliNumber     String?
  scriptureRefs  String[]  // Array of scripture references
  notes          String?  @db.Text  // Additional notes about the hymn

  // Tune metadata
  tuneName       String?  // Name of the tune
  composer       String?  // Tune composer
  arranger       String?  // Arranger (if different from composer)
  tuneKey        String?  // Musical key (e.g., "G Major", "Eâ™­ Major")
  tuneSource     String?  @db.Text  // Source of the tune
  tuneMeter      String?  // Meter specific to the tune (if different from text meter)

  // Publishing metadata
  isPublicDomain Boolean @default(false)
  publisher      String?
  publicationDate String?  // Year of publication as string (e.g., "2000", "2013")

  // Hymnal source information
  hymnalCode     String?  // e.g., "CAH2000", "AM2013"
  hymnalNumber   String?  // Hymn number in the hymnal (e.g., "1", "50a")

  // Timestamps
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  tags        HymnTag[]

  @@index([title])
  @@index([author])
  @@index([firstLine])
  @@index([hymnalCode])
  @@index([createdAt])
  @@index([updatedAt])
}

// Categories/tags for hymns
model Tag {
  id        String    @id @default(cuid())
  name      String    @unique
  slug      String    @unique
  category  String?   // e.g., "season", "theme", "topic"
  hymns     HymnTag[]
  createdAt DateTime  @default(now())

  @@index([category])
  @@index([name])
}

// Junction table for many-to-many relationship
model HymnTag {
  hymn   Hymn   @relation(fields: [hymnId], references: [id], onDelete: Cascade)
  hymnId String
  tag    Tag    @relation(fields: [tagId], references: [id], onDelete: Cascade)
  tagId  String

  @@id([hymnId, tagId])
  @@index([hymnId])
  @@index([tagId])
}
